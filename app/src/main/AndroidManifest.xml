<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mlsdev.com.weather">

    <application
        android:name="com.mlsdev.weather.app.WeatherApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyTheme">

        <activity android:name="com.mlsdev.weather.ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mlsdev.weather.ui.activity.DetailWeatherActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mlsdev.weather.ui.activity.MainActivity" />
        </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />


</manifest>
